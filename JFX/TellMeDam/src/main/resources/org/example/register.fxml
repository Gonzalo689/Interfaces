<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #6f876f;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.RegisterController">
    <children>
      <Label text="Únete a TellMeDam" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
        <MFXTextField fx:id="usernameRegister" floatMode="BORDER" floatingText="Nombre Usuario" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <MFXTextField fx:id="emailRegister" floatMode="BORDER" floatingText="Email" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <MFXPasswordField fx:id="passwordRegister" floatMode="BORDER" floatingText="Contraseña" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <MFXPasswordField fx:id="confirmRegister" floatMode="BORDER" floatingText="Confirmar Contraseña" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <MFXProgressBar fx:id="progressSpinner" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
        <MFXButton buttonType="RAISED" minHeight="27.0" minWidth="70.0" mnemonicParsing="false" onAction="#registro" styleClass="outline-button" text="Registrarse" GridPane.columnIndex="5" GridPane.rowIndex="1" />
        <MFXButton buttonType="RAISED" minHeight="27.0" minWidth="70.0" onAction="#switchToPrimary" styleClass="outline-button" text="¿Ya tienes cuenta?" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <stylesheets>
      <URL value="@../../styles/Button.css" />
   </stylesheets>
</VBox>
